<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="org.eclipse.orion.application"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            thread="any"
            visible="true">
         <run
               class="org.eclipse.orion.server.configurator.WebApplication">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.equinox.http.registry.servlets">
      <servlet
            alias="/file"
            class="org.eclipse.orion.internal.server.servlets.file.NewFileServlet">
      </servlet>
      <servlet
            alias="/workspace"
            class="org.eclipse.orion.internal.server.servlets.workspace.WorkspaceServlet">
      </servlet>
      <servlet
            alias="/filesystems"
            class="org.eclipse.orion.internal.server.servlets.file.FileSystemsServlet">
      </servlet>
      <servlet
            alias="/prefs"
            class="org.eclipse.orion.server.servlets.PreferencesServlet">
      </servlet>
      <servlet
            alias="/project"
            class="org.eclipse.orion.internal.server.servlets.project.ProjectServlet">
      </servlet>
      <servlet
            alias="/solrsearch"
            class="org.apache.solr.servlet.SolrServlet"
            httpcontextId="org.eclipse.orion.server.core.configurator.httpcontext.search">
      </servlet>
      <servlet
            alias="/users"
            class="org.eclipse.orion.server.useradmin.servlets.UsersAdminServlet">
      </servlet>
   </extension>
   <extension
         point="org.eclipse.equinox.http.registry.filters">
      <filter
            alias="/"
            class="org.eclipse.orion.server.configurator.servlet.WelcomeFileFilter">
      </filter>
      <filter
            alias="/file"
            class="org.eclipse.orion.server.configurator.servlet.AuthenticationFilter">
      </filter>
      <filter
            alias="/workspace"
            class="org.eclipse.orion.server.configurator.servlet.AuthenticationFilter">
      </filter>
      <filter
            alias="/filesystems"
            class="org.eclipse.orion.server.configurator.servlet.AuthenticationFilter">
      </filter>
      <filter
            alias="/prefs"
            class="org.eclipse.orion.server.configurator.servlet.AuthenticationFilter">
      </filter>
      <filter
            alias="/project"
            class="org.eclipse.orion.server.configurator.servlet.AuthenticationFilter">
      </filter>
      <filter
            alias="/solrsearch"
            class="org.eclipse.orion.server.configurator.servlet.AuthenticationFilter">
      </filter>
      <filter
            alias="/users"
            class="org.eclipse.orion.server.useradmin.servlets.AdminFilter">
      </filter>
   </extension>
   <extension
         point="org.eclipse.equinox.http.registry.httpcontexts">
      <httpcontext
            id="org.eclipse.orion.server.configurator.httpcontext.webide">
         <resource-mapping
               bundle="org.eclipse.orion.client.core"
               path="/static"></resource-mapping>
      </httpcontext>
      <httpcontext
            id="org.eclipse.orion.server.configurator.httpcontext.webeditor">
         <resource-mapping
               bundle="org.eclipse.orion.client.editor"
               path="/web">
         </resource-mapping>
      </httpcontext>
      <httpcontext
            id="org.eclipse.orion.server.configurator.httpcontext.dojo">
         <resource-mapping
               bundle="org.dojotoolkit"
               path="/">
         </resource-mapping>
      </httpcontext>
      <httpcontext
            id="org.eclipse.orion.server.configurator.httpcontext.openajax">
         <resource-mapping
               bundle="org.openajax"
               path="/">
         </resource-mapping>
      </httpcontext>
      <httpcontext
            id="org.eclipse.orion.server.configurator.httpcontext.search">
         <resource-mapping
               bundle="org.eclipse.orion.server.search"
               path="/">
         </resource-mapping>
      </httpcontext>
      <httpcontext
            id="org.eclipse.orion.server.configurator.httpcontext.useradmin">
         <resource-mapping
               bundle="org.eclipse.orion.server.useradmin"
               path="/static">
         </resource-mapping>
      </httpcontext>
   </extension>
   <extension
         point="org.eclipse.equinox.http.registry.resources">
      <resource
            alias="/"
            httpcontextId="org.eclipse.orion.server.configurator.httpcontext.webide">
      </resource>
      <resource
            alias="/webeditor"
            httpcontextId="org.eclipse.orion.server.configurator.httpcontext.webeditor">
      </resource>
      <resource
            alias="/org.dojotoolkit"
            httpcontextId="org.eclipse.orion.server.configurator.httpcontext.dojo">
      </resource>
      <resource
            alias="/openajax"
            httpcontextId="org.eclipse.orion.server.configurator.httpcontext.openajax">
      </resource>
      <resource
            alias="/usersstatic"
            httpcontextId="org.eclipse.orion.server.configurator.httpcontext.useradmin">
      </resource>
   </extension>
</plugin>
